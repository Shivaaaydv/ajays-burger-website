import React, { useState } from 'react';
import { Menu, ShoppingCart, Phone, MapPin, Clock, Search, ChevronRight } from 'lucide-react';

const AjaysMenuWebsite = () => {
  const [selectedCategory, setSelectedCategory] = useState('all');
  const [cart, setCart] = useState([]);
  const [showCart, setShowCart] = useState(false);
  const [searchTerm, setSearchTerm] = useState('');

  const categories = [
    { id: 'all', name: 'All Items', icon: 'üçΩÔ∏è' },
    { id: 'burgers', name: 'Burgers', icon: 'üçî' },
    { id: 'pizza', name: 'Pizza', icon: 'üçï' },
    { id: 'sides', name: 'French Fries', icon: 'üçü' },
    { id: 'beverages', name: 'Beverages', icon: 'ü•§' },
    { id: 'combos', name: 'Combo Meals', icon: 'üéâ' }
  ];

  const menuItems = [
    // Normal Burgers
    { id: 1, name: 'Apna Burger', category: 'burgers', price: 40, image: 'üçî', description: 'Our signature classic burger', popular: true },
    { id: 2, name: 'Tandoori Burger', category: 'burgers', price: 40, image: 'üçî', description: 'Spicy tandoori flavor burger', popular: true },
    { id: 3, name: 'Schezwan Burger', category: 'burgers', price: 40, image: 'üçî', description: 'Hot & spicy schezwan burger' },
    { id: 4, name: 'Peri Peri Burger', category: 'burgers', price: 40, image: 'üçî', description: 'Fiery peri peri spiced burger' },
    
    // Cheese Loaded Burgers
    { id: 5, name: 'Apna Cheese Burger', category: 'burgers', price: 50, image: 'üßÄ', description: 'Classic burger loaded with cheese', popular: true },
    { id: 6, name: 'Tandoori Cheese Burger', category: 'burgers', price: 50, image: 'üßÄ', description: 'Tandoori burger with extra cheese' },
    { id: 7, name: 'Schezwan Cheese Burger', category: 'burgers', price: 50, image: 'üßÄ', description: 'Schezwan burger with melted cheese' },
    { id: 8, name: 'Peri Peri Cheese Burger', category: 'burgers', price: 50, image: 'üßÄ', description: 'Peri peri burger loaded with cheese' },
    
    // Pizzas
    { id: 9, name: 'Margherita Pizza', category: 'pizza', price: 199, image: 'üçï', description: 'Classic tomato, mozzarella & basil', popular: true },
    { id: 10, name: 'Pepperoni Pizza', category: 'pizza', price: 279, image: 'üçï', description: 'Loaded with pepperoni & cheese' },
    { id: 11, name: 'Chicken Supreme', category: 'pizza', price: 299, image: 'üçï', description: 'Chicken chunks, peppers & onions', popular: true },
    { id: 12, name: 'Veggie Delight', category: 'pizza', price: 229, image: 'üçï', description: 'Fresh vegetables with Italian herbs' },
    { id: 13, name: 'Paneer Tikka Pizza', category: 'pizza', price: 249, image: 'üçï', description: 'Tandoori paneer with special sauce' },
    
    // French Fries
    { id: 14, name: 'Plain Fries', category: 'sides', price: 40, image: 'üçü', description: 'Crispy golden french fries' },
    { id: 15, name: 'Peri Peri Fries', category: 'sides', price: 50, image: 'üçü', description: 'Fries tossed in peri peri seasoning', popular: true },
    { id: 16, name: 'Cheese Fries', category: 'sides', price: 60, image: 'üßÄ', description: 'Fries loaded with cheese sauce', popular: true },
    { id: 17, name: 'Masala Fries', category: 'sides', price: 50, image: 'üçü', description: 'Fries with Indian spice mix' },
    
    // Beverages
    { id: 18, name: 'Coca Cola', category: 'beverages', price: 40, image: 'ü•§', description: 'Chilled soft drink' },
    { id: 19, name: 'Fresh Juice', category: 'beverages', price: 60, image: 'üßÉ', description: 'Seasonal fresh juice' },
    { id: 20, name: 'Milkshake', category: 'beverages', price: 89, image: 'ü•§', description: 'Chocolate/Vanilla/Strawberry' },
    
    // Combos
    { id: 21, name: 'Burger Combo', category: 'combos', price: 80, image: 'üéâ', description: 'Burger + Fries + Drink', popular: true },
    { id: 22, name: 'Pizza Combo', category: 'combos', price: 349, image: 'üéâ', description: 'Medium Pizza + Garlic Bread + 2 Drinks', popular: true },
    { id: 23, name: 'Family Feast', category: 'combos', price: 699, image: 'üéâ', description: 'Large Pizza + 2 Burgers + Fries + 4 Drinks' }
  ];

  const filteredItems = menuItems.filter(item => {
    const matchesCategory = selectedCategory === 'all' || item.category === selectedCategory;
    const matchesSearch = item.name.toLowerCase().includes(searchTerm.toLowerCase());
    return matchesCategory && matchesSearch;
  });

  const addToCart = (item) => {
    const existing = cart.find(c => c.id === item.id);
    if (existing) {
      setCart(cart.map(c => c.id === item.id ? {...c, quantity: c.quantity + 1} : c));
    } else {
      setCart([...cart, {...item, quantity: 1}]);
    }
  };

  const removeFromCart = (itemId) => {
    setCart(cart.filter(c => c.id !== itemId));
  };

  const updateQuantity = (itemId, delta) => {
    setCart(cart.map(c => {
      if (c.id === itemId) {
        const newQty = c.quantity + delta;
        return newQty > 0 ? {...c, quantity: newQty} : c;
      }
      return c;
    }).filter(c => c.quantity > 0));
  };

  const cartTotal = cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);

  return (
    <div className="min-h-screen bg-gradient-to-br from-red-50 to-orange-50">
      {/* Header */}
      <header className="bg-gradient-to-r from-red-600 to-red-700 text-white shadow-lg sticky top-0 z-50">
        <div className="max-w-7xl mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center space-x-4">
              <div className="bg-white rounded-full p-2 shadow-lg">
                <div className="text-3xl">üçî</div>
              </div>
              <div>
                <h1 className="text-2xl md:text-3xl font-bold">Ajay's Burger & Pizza</h1>
                <p className="text-red-100 text-sm">Happy Wali Feeling!</p>
              </div>
            </div>
            <button 
              onClick={() => setShowCart(!showCart)}
              className="relative bg-white text-red-600 p-3 rounded-full hover:bg-red-50 transition shadow-lg"
            >
              <ShoppingCart size={24} />
              {cart.length > 0 && (
                <span className="absolute -top-2 -right-2 bg-yellow-400 text-red-900 text-xs font-bold rounded-full h-6 w-6 flex items-center justify-center">
                  {cart.length}
                </span>
              )}
            </button>
          </div>
        </div>
      </header>

      {/* Info Banner */}
      <div className="bg-gradient-to-r from-yellow-400 to-orange-400 text-red-900 py-3 px-4">
        <div className="max-w-7xl mx-auto flex flex-wrap justify-center md:justify-between items-center gap-4 text-sm font-semibold">
          <div className="flex items-center gap-2">
            <Phone size={18} />
            <span>+91 98765 43210</span>
          </div>
          <div className="flex items-center gap-2">
            <Clock size={18} />
            <span>10:00 AM - 11:00 PM</span>
          </div>
          <div className="flex items-center gap-2">
            <MapPin size={18} />
            <span>Fast Delivery Available</span>
          </div>
        </div>
      </div>

      {/* Search Bar */}
      <div className="max-w-7xl mx-auto px-4 py-6">
        <div className="relative max-w-md mx-auto">
          <Search className="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400" size={20} />
          <input
            type="text"
            placeholder="Search for burgers, pizzas..."
            value={searchTerm}
            onChange={(e) => setSearchTerm(e.target.value)}
            className="w-full pl-12 pr-4 py-3 rounded-full border-2 border-red-200 focus:border-red-500 focus:outline-none shadow-md"
          />
        </div>
      </div>

      {/* Categories */}
      <div className="max-w-7xl mx-auto px-4 pb-6">
        <div className="flex overflow-x-auto gap-3 pb-2 scrollbar-hide">
          {categories.map(cat => (
            <button
              key={cat.id}
              onClick={() => setSelectedCategory(cat.id)}
              className={`flex items-center gap-2 px-6 py-3 rounded-full font-semibold whitespace-nowrap transition shadow-md ${
                selectedCategory === cat.id 
                  ? 'bg-gradient-to-r from-red-600 to-red-700 text-white scale-105' 
                  : 'bg-white text-gray-700 hover:bg-red-50'
              }`}
            >
              <span className="text-xl">{cat.icon}</span>
              <span>{cat.name}</span>
            </button>
          ))}
        </div>
      </div>

      {/* Menu Grid */}
      <main className="max-w-7xl mx-auto px-4 pb-12">
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {filteredItems.map(item => (
            <div key={item.id} className="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition transform hover:-translate-y-1">
              {item.popular && (
                <div className="bg-gradient-to-r from-yellow-400 to-orange-400 text-red-900 text-xs font-bold px-4 py-1 text-center">
                  ‚≠ê POPULAR
                </div>
              )}
              <div className="p-6">
                <div className="text-6xl mb-4 text-center">{item.image}</div>
                <h3 className="text-xl font-bold text-gray-800 mb-2">{item.name}</h3>
                <p className="text-gray-600 text-sm mb-4">{item.description}</p>
                <div className="flex items-center justify-between">
                  <span className="text-2xl font-bold text-red-600">‚Çπ{item.price}</span>
                  <button
                    onClick={() => addToCart(item)}
                    className="bg-gradient-to-r from-red-600 to-red-700 text-white px-6 py-2 rounded-full font-semibold hover:from-red-700 hover:to-red-800 transition shadow-md flex items-center gap-2"
                  >
                    Add <ChevronRight size={18} />
                  </button>
                </div>
              </div>
            </div>
          ))}
        </div>

        {filteredItems.length === 0 && (
          <div className="text-center py-12">
            <p className="text-gray-500 text-lg">No items found. Try a different search or category!</p>
          </div>
        )}
      </main>

      {/* Cart Sidebar */}
      {showCart && (
        <div className="fixed inset-0 bg-black bg-opacity-50 z-50" onClick={() => setShowCart(false)}>
          <div 
            className="absolute right-0 top-0 h-full w-full md:w-96 bg-white shadow-2xl overflow-y-auto"
            onClick={(e) => e.stopPropagation()}
          >
            <div className="sticky top-0 bg-gradient-to-r from-red-600 to-red-700 text-white p-6 shadow-lg">
              <div className="flex justify-between items-center">
                <h2 className="text-2xl font-bold">Your Cart</h2>
                <button onClick={() => setShowCart(false)} className="text-white hover:bg-red-800 p-2 rounded-full">
                  ‚úï
                </button>
              </div>
            </div>

            <div className="p-6">
              {cart.length === 0 ? (
                <div className="text-center py-12">
                  <div className="text-6xl mb-4">üõí</div>
                  <p className="text-gray-500">Your cart is empty</p>
                  <p className="text-sm text-gray-400 mt-2">Add some delicious items!</p>
                </div>
              ) : (
                <>
                  {cart.map(item => (
                    <div key={item.id} className="border-b border-gray-200 pb-4 mb-4">
                      <div className="flex justify-between items-start mb-2">
                        <div>
                          <h3 className="font-semibold text-gray-800">{item.name}</h3>
                          <p className="text-sm text-gray-500">‚Çπ{item.price} each</p>
                        </div>
                        <button
                          onClick={() => removeFromCart(item.id)}
                          className="text-red-500 hover:text-red-700"
                        >
                          ‚úï
                        </button>
                      </div>
                      <div className="flex items-center justify-between">
                        <div className="flex items-center gap-3 bg-gray-100 rounded-full px-3 py-1">
                          <button
                            onClick={() => updateQuantity(item.id, -1)}
                            className="text-red-600 font-bold hover:bg-red-100 w-6 h-6 rounded-full"
                          >
                            -
                          </button>
                          <span className="font-semibold w-6 text-center">{item.quantity}</span>
                          <button
                            onClick={() => updateQuantity(item.id, 1)}
                            className="text-red-600 font-bold hover:bg-red-100 w-6 h-6 rounded-full"
                          >
                            +
                          </button>
                        </div>
                        <span className="font-bold text-gray-800">‚Çπ{item.price * item.quantity}</span>
                      </div>
                    </div>
                  ))}

                  <div className="border-t-2 border-gray-300 pt-4 mb-6">
                    <div className="flex justify-between items-center mb-2">
                      <span className="text-gray-600">Subtotal</span>
                      <span className="font-semibold">‚Çπ{cartTotal}</span>
                    </div>
                    <div className="flex justify-between items-center mb-2">
                      <span className="text-gray-600">Delivery Fee</span>
                      <span className="font-semibold text-green-600">FREE</span>
                    </div>
                    <div className="flex justify-between items-center text-xl font-bold mt-4">
                      <span>Total</span>
                      <span className="text-red-600">‚Çπ{cartTotal}</span>
                    </div>
                  </div>

                  <button className="w-full bg-gradient-to-r from-red-600 to-red-700 text-white py-4 rounded-full font-bold text-lg hover:from-red-700 hover:to-red-800 transition shadow-lg">
                    Proceed to Checkout üéâ
                  </button>
                </>
              )}
            </div>
          </div>
        </div>
      )}

      {/* Footer */}
      <footer className="bg-gradient-to-r from-gray-800 to-gray-900 text-white py-8 mt-12">
        <div className="max-w-7xl mx-auto px-4 text-center">
          <h3 className="text-2xl font-bold mb-2">Ajay's Burger & Pizza</h3>
          <p className="text-gray-400 mb-4">Experience the Happy Wali Feeling!</p>
          <div className="flex justify-center gap-6 text-sm">
            <span>üìû +91 98765 43210</span>
            <span>üìß orders@ajaysfood.com</span>
          </div>
          <p className="text-gray-500 text-xs mt-4">¬© 2024 Ajay's Burger & Pizza. All rights reserved.</p>
        </div>
      </footer>
    </div>
  );
};

export default AjaysMenuWebsite;
